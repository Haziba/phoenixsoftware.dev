<!-- Header -->
<div data-controller="mobile-menu" class="relative z-50">
    <header id="header" class="bg-charcoal-900 border-b border-charcoal-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-8 py-4 sm:py-6">
            <nav class="flex items-center justify-between">
                <%= link_to root_path, class: "flex items-center space-x-2 text-lg sm:text-xl font-semibold text-white" do %>
                    <img src="/apple-touch-icon.png" alt="Phoenix Software" class="w-12 h-12">
                    <span>Phoenix Software</span>
                <% end %>
                <!-- Desktop nav -->
                <div class="hidden md:flex items-center space-x-8">
                    <%= link_to "Home", root_path, class: "#{current_page?(root_path) ? 'text-white' : 'text-charcoal-300 hover:text-white'} transition-colors" %>
                    <%= link_to "Case Studies", case_studies_path, class: "#{current_page?(case_studies_path) ? 'text-white' : 'text-charcoal-300 hover:text-white'} transition-colors" %>
                    <%= link_to "Services", services_path, class: "#{current_page?(services_path) ? 'text-white' : 'text-charcoal-300 hover:text-white'} transition-colors" %>
                    <%= link_to "Get in Touch", contact_path, class: "bg-accent-600 text-white px-6 py-2 rounded-md hover:bg-accent-700 transition-colors" %>
                </div>
                <!-- Mobile hamburger button -->
                <button class="md:hidden text-white p-2" data-action="click->mobile-menu#toggle" aria-label="Toggle menu">
                    <i class="fa-solid fa-bars text-xl" data-mobile-menu-target="openIcon"></i>
                    <i class="fa-solid fa-xmark text-xl hidden" data-mobile-menu-target="closeIcon"></i>
                </button>
            </nav>
        </div>
    </header>
    <!-- Mobile menu dropdown -->
    <div class="hidden md:hidden absolute left-0 right-0 bg-charcoal-900 border-b border-charcoal-800 shadow-lg" data-mobile-menu-target="menu">
        <div class="max-w-7xl mx-auto px-4 py-4 space-y-3">
            <%= link_to "Home", root_path, class: "block py-2 #{current_page?(root_path) ? 'text-white' : 'text-charcoal-300 hover:text-white'} transition-colors", data: { action: "click->mobile-menu#close" } %>
            <%= link_to "Case Studies", case_studies_path, class: "block py-2 #{current_page?(case_studies_path) ? 'text-white' : 'text-charcoal-300 hover:text-white'} transition-colors", data: { action: "click->mobile-menu#close" } %>
            <%= link_to "Services", services_path, class: "block py-2 #{current_page?(services_path) ? 'text-white' : 'text-charcoal-300 hover:text-white'} transition-colors", data: { action: "click->mobile-menu#close" } %>
            <%= link_to "Get in Touch", contact_path, class: "block py-2 text-accent-500 hover:text-accent-400 transition-colors", data: { action: "click->mobile-menu#close" } %>
        </div>
    </div>
</div>
