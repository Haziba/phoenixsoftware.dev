<!-- Page Header -->
<section class="bg-charcoal-800 py-12 sm:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-8">
        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4">Posts</h1>
        <p class="text-lg sm:text-xl text-charcoal-200 max-w-3xl">
            Thoughts on software engineering, legacy systems, and building reliable software.
        </p>
    </div>
</section>

<!-- Posts List -->
<section class="py-12 sm:py-20 bg-charcoal-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-8">
        <% if @posts.empty? %>
            <p class="text-charcoal-400 text-center">No posts yet. Check back soon.</p>
        <% else %>
            <div class="space-y-8">
                <% @posts.each do |post| %>
                    <article class="bg-charcoal-800 border border-charcoal-700 rounded-lg p-6 sm:p-8 hover:border-charcoal-600 transition-colors">
                        <%= link_to post_path(slug: post.slug), class: "block" do %>
                            <time class="text-sm text-charcoal-400"><%= post.date.strftime("%B %-d, %Y") %></time>
                            <h2 class="text-xl sm:text-2xl font-semibold text-white mt-2 mb-3 hover:text-accent-400 transition-colors"><%= post.title %></h2>
                            <% if post.description.present? %>
                                <p class="text-charcoal-300"><%= post.description %></p>
                            <% end %>
                            <span class="inline-block mt-4 text-accent-500 text-sm font-medium">Read more â†’</span>
                        <% end %>
                    </article>
                <% end %>
            </div>
        <% end %>
    </div>
</section>
