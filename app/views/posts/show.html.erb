<!-- Post Header -->
<section class="bg-charcoal-800 py-12 sm:py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-8">
        <%= link_to "â† Back to Posts", posts_path, class: "text-accent-500 hover:text-accent-400 text-sm mb-6 inline-block" %>
        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4"><%= @post.title %></h1>
        <time class="text-charcoal-400"><%= @post.date.strftime("%B %-d, %Y") %></time>
    </div>
</section>

<!-- Post Content -->
<section class="py-12 sm:py-16 bg-charcoal-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-8">
        <article class="prose prose-invert prose-lg max-w-none
            prose-headings:text-white prose-headings:font-semibold
            prose-h2:text-2xl prose-h2:mt-10 prose-h2:mb-4
            prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-3
            prose-p:text-charcoal-200 prose-p:leading-relaxed prose-p:mb-6
            prose-a:text-accent-500 prose-a:no-underline hover:prose-a:text-accent-400
            prose-strong:text-white
            prose-code:text-accent-400 prose-code:bg-charcoal-800 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-code:before:content-none prose-code:after:content-none
            prose-pre:bg-charcoal-800 prose-pre:border prose-pre:border-charcoal-700 prose-pre:rounded-lg
            prose-blockquote:border-accent-500 prose-blockquote:text-charcoal-300 prose-blockquote:italic
            prose-ul:text-charcoal-200 prose-ol:text-charcoal-200
            prose-li:marker:text-accent-500">
            <%= @post.content %>
        </article>
    </div>
</section>
